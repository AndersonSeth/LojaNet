@model IEnumerable<LojaNet.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h2>Clientes</h2>
<p>
<a class="btn btn-info" href="/Cliente/Incluir">Novo</a>
</p>

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Email</th>

    </tr>

    @foreach (var cliente in Model)
    {
        <tr>
            <td>

              <a href="/Cliente/Detalhes/@cliente.Id"> @cliente.Nome</a>
                
            </td>

            <td>@cliente.Email</td>
        </tr>
    }
</table>


